1  {{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" -}}
2  <sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
3    {{- $now := now.Format "2006-01-02T15:04:05Z07:00" -}}
4    {{- range .Site.Sections -}}
5      <sitemap>
6        <loc>{{ printf "%s%s" $.Site.BaseURL (printf "sitemaps/%s.xml" .Title | urlize) }}</loc>
7        <lastmod>{{ $now }}</lastmod>
8      </sitemap>
9    {{- end -}}
10 </sitemapindex>
